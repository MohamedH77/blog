<!-- single-post.handlebars -->
<section class="hero is-info is-small is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">{{title}}</h1>
            <h2 class="subtitle">Posted by {{post.user.lname}}, {{post.user.fname}} on {{post.createdAt}}</h2>
        </div>
    </div>
</section>

<div class="container">
    <section class="article">
        <div class="column is-8 is-offset-2">
            <div class="card">
                <div class="card-content">
                    <div>
                        <p>{{body}}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="/public/js/new"></script> 