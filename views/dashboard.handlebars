<h1>Your Posts</h1>

<div class="flex-row">
  {{#each posts}}
  <div class="flex-column flex-no-wrap col-xl-4 w-25">
    <div class="display-flex">
      <div class="">
        <div class="card p-4 card-rounded">
          <div class="card card-header">
            <h2>{{title}}</h2>
          </div>
          <div class="card card-body card-rounded">
            <p>{{body}}</p>
          </div>
          <div class="card card-body card-rounded">
            <p>Posted On: {{createdAt}}</p>
          </div>
          <div class="card card-footer">
            <h3><button data-id="{{id}}" class="btn btn-primary w-100 commentsTag">Show Comments</button></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

  <footer class="footer flex-row justify-center" style="position: fixed; bottom: 30px; width: 100%;">
    <a href="/dashboard/new">âž• New Post</a>
  </footer>
</div>
